{% extends 'base.html.twig' %}

{% block title %}Register!{% endblock %}

{% block body %}
    <div class="container border-box">
        <div class="row">
            <div class="col-sm-12">
                {%  if maxNumberOfUsers is defined %}
                    <h3 class="h3 mb-3 font-weight-normal" style="color: crimson">{{ maxNumberOfUsers }}</h3>
                {% else %}
                    {{ form_start(registrationForm, {
                        'attr': {'class': 'form-signin'}
                    }) }}
                    <div class="form-group align-content-center">
                        <div class="d-flex justify-content-center">
                            <div class="row-cols-1"> <h1 class="h3 mb-3 font-weight-normal">Register</h1></div>
                        </div>
                        <div class="d-flex justify-content-center">
                                {{ form_row(registrationForm.firstName, {
                                    attr: { placeholder: 'First Name', 'class': 'd-flex p-0' }
                                }) }}
                        </div>
                        <div class="d-flex justify-content-center">
                            <div class="">
                                {{ form_row(registrationForm.email, {
                                    attr: { placeholder: 'Email', 'class': 'd-flex p-0' }
                                }) }}
                            </div>
                        </div>
                        <div class="d-flex justify-content-center">
                            <div class="">
                                {{ form_row(registrationForm.plainPassword, {
                                    attr: { placeholder: 'Password', 'class': 'd-flex p-0' }
                                }) }}
                            </div>
                        </div>
                        <div class="d-flex justify-content-center">
                            <div class="">
                                {{ form_row(registrationForm.telephone, {
                                    attr: { placeholder: 'Telephone', 'class': 'd-flex p-0' }
                                }) }}
                            </div>
                        </div>
                        <div class="d-flex justify-content-center">
                            <div class="d-flex p-0">
                                {{ form_row(registrationForm.userType, {attr: { 'class': 'd-flex p-2' }})  }}
                            </div>
                        </div>
                        <div class="d-flex justify-content-center">
                            <div class="d-flex p-0">
                            {{ form_row(registrationForm.agreeTerms) }}
                            </div>
                            <div class="d-flex p-0">&nbsp;<a href="{{ path('viewT&C') }}" target="_blank" style="font-weight: bold; text-decoration: none;">Check terms</a>
                            </div>
                        </div>
                        <div class="d-flex justify-content-center">
                            <button class="btn btn-lg btn-primary btn-block" type="submit">
                                Register
                            </button>
                            {{ form_end(registrationForm) }}
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
